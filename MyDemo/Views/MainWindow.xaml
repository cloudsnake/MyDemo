<Window x:Class="MyDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Vertical">
            <Menu VerticalAlignment="Top" Height="26">
                <MenuItem Header="模块">
                    <MenuItem Header="TestMod" Command="{Binding ShowModCommand}" CommandParameter="TestMod.Views.Demo"></MenuItem>
                    <MenuItem Header="AutoMapper" Command="{Binding ShowModCommand}" CommandParameter="AutoMapperMod.Views.ViewA"></MenuItem>
                </MenuItem>
            </Menu>
            <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        </WrapPanel>
    </Grid>
</Window>
